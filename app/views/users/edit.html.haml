%h1 Edit My Account
- form_for @user, :url => account_path do |f|
  = f.error_messages
  = render :partial => "form", :object => f
  = f.submit "Update"
%br
- form_for :user, @user, :url => avatar_path, :html => { :multipart => true } do |form|
  = form.hidden_field :id, :value => @user.id
  = form.file_field :avatar
  = submit_tag "Upload"
= link_to "My Profile", account_path
