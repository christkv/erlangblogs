%h1 Authlogic Example App
= pluralize User.logged_in.count, "user"
= "currently logged in"
%br
%br
- if !current_user
  = link_to "Register", new_account_path
  = "|"
  = link_to "Log In", new_user_session_path
  = "|"
  = "Login with Facebook connect"
  = fb_login_button('window.location = "/facebook/link_user_accounts";')
- else
  - form_for "user", :url => search_path do |f|
    = text_field("search", "search")
    = submit_tag "Search"
  = "|"
  = link_to "My Account", account_path
  = "|"
  = link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?"
%p{:style => "color: green"}
  = flash[:notice]
